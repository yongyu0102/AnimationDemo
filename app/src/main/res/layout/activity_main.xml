<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhangpeng.myapplication.MainActivity">
    <TextView
        android:text="通过设置xml文件来设置动画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变透明度" />

        <Button
            android:id="@+id/rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转" />

        <Button
            android:id="@+id/scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放" />
        <Button
            android:id="@+id/translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动" />

    </LinearLayout>
    <Button
        android:text="帧动画"
        android:id="@+id/frame_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/translate_rotate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="先平移再旋转" />
    <Button
        android:id="@+id/alpha_rotate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="先渐变再旋转" />
    <TextView
        android:text="通过java代码来设置动画"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/alpha_java_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="改变透明度JAVA" />

    <Button
    android:id="@+id/rotate_java_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="旋转JAVA" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_main2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动新的Activity" />
        <Button
            android:id="@+id/start_lv_activity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动ListActivity" />

    </LinearLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/anim" />
</LinearLayout>
